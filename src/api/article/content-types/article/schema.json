{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "maxLength": 120
    },
    "Body": {
      "type": "richtext"
    },
    "Abstract": {
      "type": "string",
      "maxLength": 250
    },
    "Featured": {
      "type": "boolean",
      "default": false
    },
    "TopStory": {
      "type": "boolean",
      "default": false
    },
    "Trending": {
      "type": "boolean",
      "default": false
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title",
      "required": true
    },
    "ImageURL": {
      "type": "string"
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "art",
        "entertainment",
        "technology",
        "food-drinks",
        "lifestyle",
        "news",
        "events",
        "travel",
        "tv-movies",
        "shopping",
        "wellbeing",
        "things-to-do"
      ],
      "default": "entertainment",
      "required": true
    },
    "love": {
      "type": "integer",
      "default": 0
    },
    "laugh": {
      "type": "integer",
      "default": 0
    },
    "unicorn": {
      "type": "integer",
      "default": 0
    },
    "clap": {
      "type": "integer",
      "default": 0
    },
    "cheer": {
      "type": "integer",
      "default": 0
    }
  }
}
